<div class="row">
{{#if records}}	
   {{#each records}}
	<div class="col-lg-3 col-md-3 col-sm-3 col-xs-6 bookcontainer">
        <a href="" class="listbook">
			<img onerror="this.src='http://narendr.in/error.jpg'" src="{{imagePath}}" alt="{{title}}" />
			<span class="title headline">{{#stringshort title}} {{/stringshort}}</span>

		</a>
	</div>
    {{/each}}
    {{else}}
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 " >
   		<h4 class="noItems">Sorry no products in your Favourite</h4>
   </div>
 {{/if}}
</div>